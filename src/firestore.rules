
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      allow read: if request.auth != null;
      allow write, delete: if request.auth.uid == userId;

      // Professionals can manage their own anamnesis records
      match /anamnesis/{anamnesisId} {
        allow read, write: if request.auth.uid == userId && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'professional';
      }
      
      // Professionals can manage their own reports
      match /reports/{reportId} {
        allow write: if request.auth.uid == userId && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'professional';
      }
    }

    // Rules for querying the 'reports' collection group
    match /{path=**}/reports/{reportId} {
        // Professionals can read their own reports.
        // Patients can read reports linked to their UID.
        allow get, list: if request.auth != null && 
                           ( (exists(path) && get(path).data.professionalId == request.auth.uid) || 
                             resource.data.patientId == request.auth.uid );
    }
  }
}
