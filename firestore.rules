
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can read public profiles, but only write/delete their own.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth.uid == userId;

      // Professionals can manage their own subcollections (e.g., anamnesis, reports).
      match /{subcollection}/{docId} {
        allow read, write: if request.auth.uid == userId && 
                          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'professional';
      }
    }
    
    // This rule allows a collectionGroup query on 'reports'.
    // It is used by patients to find all reports associated with them, across all professionals.
    match /{path=**}/reports/{reportId} {
       allow read: if (
         // Rule for Patients: Can read if their UID matches the patientId in the report.
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'patient' &&
         request.auth.uid == resource.data.patientId
       ) || (
         // Rule for Professionals: Can read if their UID matches the professionalId who created the report.
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'professional' &&
         request.auth.uid == resource.data.professionalId
       );
    }

    // Chat messages can only be read/written by participants.
    match /chats/{chatId}/messages/{messageId} {
      allow read, create: if request.auth.uid in chatId.split('_');
    }
  }
}
