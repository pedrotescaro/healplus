
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read anyone's profile for chat/contact purposes
    // but can only write to their own.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write, delete: if request.auth.uid == userId;
    }

    // A professional can manage their own subcollections (anamnesis, reports, etc.).
    match /users/{professionalId}/{collection}/{docId} {
       allow read, write, delete: if request.auth.uid == professionalId &&
                                     request.auth.token.role == 'professional';
    }
    
    // This rule allows the collectionGroup query for patients to find their reports
    // across all professional subcollections.
    match /{path=**}/reports/{reportId} {
      allow read: if (request.auth.token.role == 'patient' && get(/databases/$(database)/documents/$(path)/reports/$(reportId)).data.patientId == request.auth.uid) ||
                     (request.auth.token.role == 'professional' && get(/databases/$(database)/documents/$(path)/reports/$(reportId)).data.professionalId == request.auth.uid);
    }

    // Chats can only be accessed by the two participants.
    match /chats/{chatId} {
      allow read, write: if request.auth.uid in chatId.split('_');

      match /messages/{messageId} {
        allow read, write: if request.auth.uid in resource.data.chatId.split('_');
      }
    }
  }
}
